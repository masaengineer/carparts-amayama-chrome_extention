{
  "manifest_version": 3,
  "name": "Amayama Bookmark Extension",
  "version": "1.0",
  "description": "Bookmark items on Amayama parts pages.",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "amayama.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.amayama.com/en/genuine-catalogs/*"],
      "js": ["content.js"]
    }
  ]
}
