{
  "manifest_version": 3,
  "name": "Amayama Product Bookmark",
  "version": "1.0",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "amayama.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.amayama.com/en/genuine-catalogs/*"],
      "js": ["contentScript.js"],
      "css": ["style.css"]
    }
  ]
}
